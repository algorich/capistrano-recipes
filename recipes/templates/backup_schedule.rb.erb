every :day, :at => '<%= backup_time %>' do
  command "RAILS_ENV=<%= rails_env %> backup perform --trigger db_backup --root-path <%= shared_path %>/config/backup"
  command "RAILS_ENV=<%= rails_env %> backup perform --trigger files_backup --root-path <%= shared_path %>/config/backup"
  <% if backup_logs %>
  command "RAILS_ENV=<%= rails_env %> backup perform --trigger logs_backup --root-path <%= shared_path %>/config/backup"
  <% end %>
end
